  <profiles>
    <profile>
      <!-- PLF 4.0.x Translations-->
      <id>plf40</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <configuration>
              <!-- Languages to apply in projects -->
              <!-- Can be set with command line arg -Dlangs=fr,en -->
              <!-- ALL By default, list computed from the archive -->
              <languages>
                <language>en</language>
                <language>fr</language>
                <!--
                <language>ar</language>
                <language>ja</language>
                <language>de</language>
                <language>vi</language>
                <language>sv-SE</language>
                <language>it</language>
                <language>pt-BR</language>
                <language>es-ES</language>
                -->
              </languages>
              <!-- Projects to manage -->
              <sourcesRepositories>
                <sourcesRepository>
                  <uri>git@github.com:exodev/platform-ui.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>platform-ui-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/commons.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>commons-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/ecms.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>ecms-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/social.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>social-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/calendar.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>calendar-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/wiki.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>wiki-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/forum.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>forum-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/integration.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>integration-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exodev/platform.git</uri>
                  <branch>feature/4.0.x-translation</branch>
                  <localDirectory>platform-4.0.x</localDirectory>
                </sourcesRepository>
                <sourcesRepository>
                  <uri>git@github.com:exoplatform/gatein-portal.git</uri>
                  <branch>feature/3.5.x-PLF-translation</branch>
                  <localDirectory>gatein-portal-3.5.x</localDirectory>
                </sourcesRepository>
              </sourcesRepositories>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!--
    Profile init does
    * init-prepare script
    * init mojo
    * post-process script
    * reset-local script
    -->
    <profile>
      <id>init</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>init</id>
                <phase>initialize</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.basedir}/src/scripts/init-prepare.sh</executable>
                  <workingDirectory>${project.basedir}/eXoProjects/</workingDirectory>
                </configuration>
              </execution>
              <execution>
                <id>post-process</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.basedir}/src/scripts/post-process.sh</executable>
                  <workingDirectory>${project.basedir}/eXoProjects/</workingDirectory>
                </configuration>
              </execution>
              <execution>
                <id>reset</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${project.basedir}/src/scripts/reset-local.sh</executable>
                  <workingDirectory>${project.basedir}/eXoProjects/</workingDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.exoplatform.crowdin</groupId>
            <artifactId>crowdin-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <id>init</id>
                <phase>compile</phase>
                <goals>
                  <goal>init</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
