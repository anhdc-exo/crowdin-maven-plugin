  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>org.exoplatform</groupId>
    <artifactId>exo.parent</artifactId>
    <version>8.1</version>
  </parent>
  
  <groupId>org.exoplatform.crowdin</groupId>
  <artifactId>translations</artifactId>
  <packaging>pom</packaging>
  <version>1.0.0-SNAPSHOT</version>
  <name>Translations Project</name>
  
  <properties>
    <exo.crowdin.properties>crowdin.properties</exo.crowdin.properties>
    <!-- exo.crowdin.project.id and exo.crowdin.project.key are set in settings.xml -->
    <exo.crowdin.upload-translation.properties>upload-translation/upload-translation.properties</exo.crowdin.upload-translation.properties>
  </properties>
  
  <profiles>
    <profile>
      <id>init</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>init</id>
                <phase>initialize</phase>
                <configuration>
                  <executable>${basedir}/scripts/init-prepare.sh</executable>
                  <workingDirectory>${basedir}/eXoProjects/</workingDirectory>
                </configuration>
                <goals>
                  <goal>exec</goal>
                </goals>
              </execution>
              <execution>
                <id>post-process</id>
                <phase>package</phase>
                <configuration>
                  <executable>${basedir}/scripts/post-process.sh</executable>
                  <workingDirectory>${basedir}/eXoProjects/</workingDirectory>
                </configuration>
                <goals>
                  <goal>exec</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
             <groupId>org.exoplatform.crowdin</groupId>
             <artifactId>crowdin-maven-plugin</artifactId>
             <version>1.0.0-SNAPSHOT</version>
             <executions>
               <execution>
                 <id>init</id>
                 <phase>compile</phase>
                 <goals>
                   <goal>init</goal>
                 </goals>
                 <configuration>
                   <startDir>${basedir}/eXoProjects/</startDir>
                 </configuration>
               </execution>
             </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    
